{
  "name": "algolia-codegen",
  "version": "0.1.5",
  "description": "Generate TypeScript types from Algolia indices",
  "license": "MIT",
  "author": "nightlightmare",
  "repository": {
    "type": "git",
    "url": "https://github.com/nightlightmare/algolia-codegen.git"
  },
  "homepage": "https://github.com/nightlightmare/algolia-codegen#readme",
  "bugs": {
    "url": "https://github.com/nightlightmare/algolia-codegen/issues"
  },
  "keywords": [
    "algolia",
    "typescript",
    "codegen",
    "type-generation",
    "algolia-types",
    "code-generation",
    "typescript-generator"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "algolia-codegen": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm clean && pnpm build"
  },
  "dependencies": {
    "algoliasearch": "^5.46.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.0",
    "ora": "^9.0.0",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.50.1",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
